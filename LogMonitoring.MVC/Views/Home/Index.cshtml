@using Application.Core.Utilities.DataTransferObjects_DTO_.App
@{
    ViewData["Title"] = "Log Monitoring";
}
<div class="container-fluid">

<!-- start page title -->
<div class="row">
    <div class="col-12">
        <div class="page-title-box d-sm-flex align-items-center justify-content-between">

            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item">
                        <a href="javascript: void(0);">Log Sistemi</a>
                    </li>
                    <li class="breadcrumb-item active">Uygulamalara Göre Log Analizi</li>
                </ol>
            </div>
        </div>
    </div>
</div>
<!-- end page title -->

<div class="row">
    <div class="col-xl-4">
        <div class="bg-primary opacity-50 p-4">
            <h5 class="my-2 text-white">Log Monitoring <i class="dripicons-monitor"></i> </h5>
        </div>
        <div class="card">
            <div class="card-body">

                <div class="row">
                    <div class="col-sm-6">

                        <span style="font-size:20px;color: #fff"><strong>Toplam Loglar:</strong> <label id="total-log-count"></label></span>
                        <p class="text-muted"><span class="text-success me-2" id="text-log-ratio">0%</span> Logların Tüm Loglara Oranı</p>

                        <div class="mt-4">
                            <a href="javascript: void(0);" class="btn btn-primary waves-effect waves-light btn-sm">Daha Fazlası <i class="mdi mdi-arrow-right ms-1"></i></a>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="mt-4 mt-sm-0">
                            <div id="radialBar-chart" data-colors='["--bs-primary"]' class="apex-charts"></div>
                        </div>
                    </div>
                </div>

                <ul class="verti-timeline list-unstyled" id="log-monitor-content-list" style="height: 450px">
                  
                </ul>
            </div>
        </div>
    </div>
    <div class="col-xl-8">

        <div class="card">
            <div class="card-body">
              

                <div class="row" style="height: 232px;padding-left: 130px;padding-top: 20px">
                   
                    <div class="col-lg-4">
                        <div class="p-3 rounded mt-4"  id="info-div">
                            <div class="d-flex align-items-center mb-3">
                                <div class="avatar-xs me-3">
                                    <span class="avatar-title rounded-circle bg-warning bg-soft text-primary font-size-18">
                                        <i class="fas fa-info"></i>
                                    </span>
                                </div>
                                <h2 class="font-size-20 mb-0">Info</h2>
                            </div>
                    
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="text-muted mt-3">
                                        <h1 style="font-size: 51px" id="info-card-label"></h1>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="p-3 rounded mt-4" id="warning-div">
                            <div class="d-flex align-items-center mb-3">
                                <div class="avatar-xs me-3">
                                    <span class="avatar-title rounded-circle bg-warning bg-soft text-warning font-size-18">
                                        <i class="dripicons-warning"></i>
                                    </span>
                                </div>
                                <h2 class="font-size-20 mb-0">Warning</h2>
                            </div>
                    
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="text-muted mt-3">
                                        <h1 style="font-size: 51px" id="warning-card-label"></h1>
                                    </div>
                                </div>
                    
                    
                            </div>
                        </div>
                    </div>
                     <div class="col-lg-4">
                                            <div class="p-3 rounded mt-4" id="error-div">
                                                <div class="d-flex align-items-center mb-3">
                                                    <div class="avatar-xs me-3">
                                                        <span class="avatar-title rounded-circle bg-warning bg-soft text-danger font-size-18">
                                                            <i class="bx bxs-error-alt"></i>
                                                        </span>
                                                    </div>
                                                    <h2 class="font-size-20 mb-0">Error</h2>
                                                </div>
                                     
                                                <div class="row">
                                                    <div class="col-lg-6">
                                                        <div class="text-muted mt-3">
                                                            <h1 style="font-size: 55px" id="error-card-label"></h1>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                </div>
            </div>
        </div>


        <!-- end row -->

        <div class="card">
            <div class="card-body">
                <div class="d-sm-flex flex-wrap">
                    <span class="card-title mb-4">Aylara Göre Hata Seviyeleri </span>

                </div>

                <div id="stacked-column-chart" data-colors='["--bs-primary", "--bs-warning", "--bs-success"]' class="apex-charts" dir="ltr"></div>
            </div>
        </div>
    </div>
</div>
<!-- end row -->

</div> <!-- container-fluid -->
@using LogMonitoring.MVC.Services.Session
@using LogMonitoring.MVC.Constant
@using Application.Core.Utilities.DataTransferObjects.User
@inject ISessionService SessionService

@{ var CurrentUser = SessionService.Get<UserResponse>(SessionKey.CurrentUser); }

@{
    ViewBag.Title = "Yönlendiriliyor..";
    Layout = null;
}

<!doctype html>
<html lang="en">

<head>

    <meta charset="utf-8"/>
    <title>Yazılım İzleme Sistemi</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta content="Premium Multipurpose Admin & Dashboard Template" name="description"/>
    <meta content="Themesbrand" name="author"/>
    <!-- App favicon -->
    <link rel="shortcut icon" href="assets/images/favicon.ico">

    <!-- Bootstrap Css -->
    <link href="assets/css/bootstrap.min.css" id="bootstrap-style" rel="stylesheet" type="text/css"/>
    <!-- Icons Css -->
    <link href="assets/css/icons.min.css" rel="stylesheet" type="text/css"/>
    <!-- App Css-->
    <link href="assets/css/app.min.css" id="app-style" rel="stylesheet" type="text/css"/>

</head>

<body>
<div class="account-pages my-5 pt-sm-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="text-center mb-5 text-muted">
                    <a href="#" class="d-block auth-logo">
                        <img src="assets/images/bilgem" alt="" height="20" class="auth-logo-dark mx-auto">
                        <img src="assets/images/logo-dark.png" alt="" height="20" class="auth-logo-light mx-auto">
                    </a>
                    <p class="mt-3">Bilgi Teknolojileri Yazılım İzleme Sistemi</p>
                </div>
            </div>
        </div>
        <!-- end row -->
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6 col-xl-5">
                <div class="card">

                    <div class="card-body">

                        <div class="p-2">
                            <div class="text-center">

                                <div class="avatar-md mx-auto">
                                    <div class="avatar-title rounded-circle bg-light" id="lock-profile">
                                        <i class="bx bx-lock h1 mb-0 text-primary"></i>
                                    </div>
                                    <div class="avatar-title rounded-circle bg-light" id="image-profile" style="display: none">
                                        <img src="@CurrentUser.ProfilResmi" alt="" class="img-thumbnail rounded-circle">
                                    </div>
                                </div>
                                <div class="p-2 mt-4">
                                    <h4 class="text-primary">Doğrulama Başarılı!</h4>
                                    <p class="text-muted">@CurrentUser.Ad @CurrentUser.Soyad</p>
                                    <div class="mt-4">
                                        <div class="progress animated-progess progress-xl">
                                            <div class="progress-bar bg-primary" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
                                        </div>
                                    </div>
                                    
                                </div>
                                
                            </div>
                            
                        </div>
                        <div style='display: none' id="home-logout" >
                   <div  class="d-flex justify-content-center" >
                     <button type="button" class="btn btn-danger mx-2 waves-effect btn-label waves-light" id="logout-button"><i class="bx bx-lock-alt label-icon"></i> Oturumu Kapat</button>
                     <button type="button" class="btn btn-primary mx-2 waves-effect btn-label waves-light" id="home-button"><i class="bx bx-home-alt label-icon"></i> Anasayfa</button>
                   </div>
                        </div>
                    </div>
                    
                </div>
                <div class="mt-5 text-center">

                    <p>© <script>document.write(new Date().getFullYear())</script> © Tübitak Bilgem · Bilgi Teknolojileri · Yazılım Geliştirme Ekibi
                </div>

            </div>
        </div>
    </div>
</div>

<!-- JAVASCRIPT -->
<script src="assets/libs/jquery/jquery.min.js"></script>
<script src="assets/libs/bootstrap/js/bootstrap.bundle.min.js"></script>
<script src="assets/libs/metismenu/metisMenu.min.js"></script>
<script src="assets/libs/simplebar/simplebar.min.js"></script>
<script src="assets/libs/node-waves/waves.min.js"></script>

<!-- App js -->
<script src="assets/js/app.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script src="assets/js/login.js"></script>
</body>
</html>